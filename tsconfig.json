{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "DOM"
    ],
    "jsx": "preserve",
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ]
}
